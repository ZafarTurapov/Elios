[Unit]
Description=Elios Protective Stops Guard (attach SL/TP if missing)
Wants=network-online.target
After=network-online.target

[Service]
Type=oneshot
Environment=PYTHONUNBUFFERED=1
WorkingDirectory=/root/stockbot
EnvironmentFile=-/root/stockbot/.env
EnvironmentFile=-/root/stockbot/.env.local
ExecStart=/root/stockbot/venv/bin/python -m core.trading.guards.protective_stops
Nice=5
IOSchedulingClass=2

[Install]
WantedBy=multi-user.target
